{
  "name": "gstake-faucet-contract",
  "version": "1.0.0",
  "license": "MIT",
  "packageManager": "yarn@4.0.2",
  "scripts": {
    "build": "hardhat compile",
    "node:local": "hardhat node",
    "deploy": "hardhat run --network ganache scripts/deploy.js",
    "deploy:sepolia": "hardhat run --network sepolia scripts/deploy.js",
    "deploy:GenericE20Token:ganache": "hardhat run --network sepolia scripts/GenericE20Token.deploy.js",
    "deploy:EthereumFaucet:ganache": "hardhat run --network ganache scripts/EthereumFaucet.deploy.js",
    "deploy:EthereumFaucet:sepolia": "hardhat run --network sepolia scripts/EthereumFaucet.deploy.js",
    "flatten:EthereumFaucet": "hardhat flatten contracts/EthereumFaucet.sol > contracts/EthereumFaucet_Flattened.sol",
    "test": "hardhat test",
    "gc": "git add -A && git-cz && git pull && git push"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "chai": "^4.2.0",
    "dotenv": "^16.3.1",
    "hardhat": "^2.19.4",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.1",
    "ts-node": ">=8.0.0",
    "typechain": "^8.3.0",
    "typescript": ">=4.5.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1"
  }
}
